@import '../../assets/fonts/iconfont.wxss';

page {
  background-color: #f2f2f2;
}

.search-bar {
  width: 100%;
  height: 52px;
  box-sizing: border-box;
  padding: 10px 8px;
  background-color: white;
  display: flex;
}

.search-bar>.input {
  flex: 1;
}

.search-bar>.input>.search-input {
  width: 100%;
  height: 32px;
  background: rgba(242, 242, 242, 1);
  border-radius: 18px;
  box-sizing: border-box;
  padding: 3px 15px;
  font-size: 14px;
}

.search-bar>.button {
  padding-left: 15px;
  font-size: 16px;
  color: #333;
  font-weight: 400;
  line-height: 32px;
}

.search-result {
  width: 100%;
  height: auto;
  float: left;
  background-color: white;
  box-sizing: border-box;
  padding: 20px 15px;
  margin-top: 15px;
}

.search-result>.title {
  width: 100%;
  height: auto;
  float: left;
  font-size: 16px;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 16px;
  margin-bottom: 10px;
}