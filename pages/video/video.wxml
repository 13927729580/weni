<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">视频播放</view>
</cu-custom>

<video style="width: 100%;height: 198px;" src="{{palyInfo.url}}" controls></video>

<view class="padding-sm bg-white">
  <text class="text-xl">{{video.title}}</text>
</view>

<view class="bg-white margin-top-lg">
  <block wx:if="{{chapters.length === 0}}">
    <view wx:key="id" wx:for="{{videos[0]}}" bindtap="switchVideo" data-id="{{item.id}}" class="solid-bottom padding-lg {{item.id === video.id ? 'bg-grey' : ''}}">
      <text>{{item.title}}</text>
      <text style="float: right">{{item.duration}}s</text>
    </view>
  </block>

  <block wx:else>
    <view wx:for="{{chapters}}" wx:key="id" wx:for-item="item1">
      <view class="padding-top-sm padding-bottom-sm bg-black text-white">
        <text class="margin-left-sm">{{item1.title}}</text>
      </view>
      <view wx:for="{{videos[item1.id]}}" wx:key="id" wx:for-item="item2"  bindtap="switchVideo" data-id="{{item2.id}}" class="padding-lg solid-bottom {{item2.id === video.id ? 'bg-grey' : ''}}">
        <text>{{item2.title}}</text>
        <text style="float: right">{{item2.duration}}s</text>
      </view>
    </view>
  </block>
</view>