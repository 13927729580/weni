.user {
  width: 100%;
  height: auto;
  float: left;
  display: flex;
  box-sizing: border-box;
  padding: 15px;
}

.user>.avatar {
  width: 32px;
  height: 32px;
  margin-right: 10px;
}

.user>.avatar>image {
  width: 32px;
  height: 32px;
  border-radius: 50%;
}

.user>.nickname {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  line-height: 32px;
}

.user>.invite-count {
  flex: 1;
  font-size: 12px;
  line-height: 32px;
  text-align: right;
}

.pd {
  width: 100%;
  height: auto;
  float: left;
  box-sizing: border-box;
  padding-left: 15px;
  padding-right: 15px;
}


.rule {
  width: 100%;
  height: auto;
  float: left;
  border-radius: 5px;
  background-color: white;
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, 0.1);
  margin-bottom: 15px;
}

.rule>.title {
  width: 100%;
  height: auto;
  float: left;
  font-size: 12px;
  font-weight: 500;
  box-sizing: border-box;
  padding: 10px 15px;
  border-bottom: 1px solid #f2f2f2;
}

.rule>.body {
  width: 100%;
  height: auto;
  float: left;
  box-sizing: border-box;
  padding: 10px 15px
}

.rule>.body>.item {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.7);
  line-height: 20px;
  margin-bottom: 0;
  margin-top: 0;
}

.link {
  width: 100%;
  height: auto;
  float: left;
  border-radius: 5px;
  background-color: white;
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, 0.1);
  margin-bottom: 15px;
}

.link>.title {
  width: 100%;
  height: auto;
  float: left;
  font-size: 12px;
  font-weight: 500;
  box-sizing: border-box;
  padding: 10px 15px;
  border-bottom: 1px solid #f2f2f2;
}

.link>.body {
  width: 100%;
  height: auto;
  float: left;
  box-sizing: border-box;
  padding: 10px 15px;
}

.link>.body>.link-val {
  width: 100%;
  height: auto;
  float: left;
  font-size: 12px;
  line-height: 20px;
  color: white;
  text-align: center;
  color: #333;
  margin-bottom: 15px;
}

.link>.body>.copy {
  width: 100%;
  height: 32px;
  line-height: 32px;
  float: left;
  border: 1px solid #0093ff;
  background-color: white;
  border-radius: 16px;
  text-align: center;
  font-size: 14px;
  color: #0093ff;
}

.invite-records {
  width: 100%;
  height: auto;
  float: left;
  border-radius: 5px;
  background-color: white;
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, 0.1);
  margin-bottom: 15px;
}

.invite-records>.title {
  width: 100%;
  height: auto;
  float: left;
  font-size: 0.8rem;
  font-weight: 500;
  box-sizing: border-box;
  padding: 10px 15px;
  border-bottom: 1px solid #f2f2f2;
}

.invite-records>.body {
  width: 100%;
  height: auto;
  float: left;
  box-sizing: border-box;
  padding: 10px 15px;
}

.invite-records>.body>.item {
  width: 100%;
  height: auto;
  float: left;
  margin-top: 5px;
  margin-bottom: 5px;
  box-sizing: border-box;
  display: flex;
  font-size: 0.8rem;
  line-height: 1.5rem;
}

.invite-records>.body>.item>.user-nickname {
  flex: 1;
  text-align: left;
  color: #333;
}

.invite-records>.body>.item>.result {
  flex: 1;
  text-align: right;
  color: #aaaaaa;
}

.invite-records>.body>.none {
  width: 100%;
  height: auto;
  float: left;
  margin-top: 15px;
  margin-bottom: 15px;
  font-size: 0.8rem;
  line-height: 2rem;
  text-align: center;
  color: #aaaaaa;
}