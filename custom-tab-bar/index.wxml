<view class="tabbar">
  <view class="tabbar-item" data-active="index" bindtap="switch">
    <view class="icon">
      <image src="../images/icons/home-active.png" wx:if="{{active==='index'}}"/>
      <image src="../images/icons/home.png" wx:else/>
    </view>
    <view class="name">
      <text>首页</text>
    </view>
  </view>
  <view class="tabbar-item" data-active="course" bindtap="switch">
    <view class="icon">
      <image src="../images/icons/course-active.png" wx:if="{{active==='course'}}"/>
      <image src="../images/icons/course.png" wx:else/>
    </view>
    <view class="name">
      <text>课程</text>
    </view>
  </view>
  <view class="tabbar-item" data-active="member" bindtap="switch">
    <view class="icon">
      <image src="../images/icons/user-active.png" wx:if="{{active==='member'}}"/>
      <image src="../images/icons/user.png" wx:else/>
    </view>
    <view class="name">
      <text>我的</text>
    </view>
  </view>
</view>